form(action="/users" method="get")
  input(type="text" name="term" value=searchTerm placeholder="Search users...")
  button(type="submit") Search

if users.length > 0
  ul
    each user in users
      li
        a(href=`/users/${user.id}`)= user.username
        br
        span= user.email
else if searchTerm
  p No users found
